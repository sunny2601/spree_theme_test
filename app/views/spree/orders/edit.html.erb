<% @body_id = 'cart' %>
<div data-hook="cart_container">
  <h1 class="small-left-1"><%= Spree.t(:shopping_cart) %></h1>

  <% if @order.line_items.empty? %>
    <div data-hook="empty_cart">
      <div class="alert alert-info"><%= Spree.t(:your_cart_is_empty) %></div>
      <p><%= link_to Spree.t(:continue_shopping), products_path, class: 'btn btn-default' %></p>
    </div>
  <% else %>
    <div data-hook="outside_cart_form">
      <%= form_for @order, url: update_cart_path, html: { id: 'update-cart' } do |order_form| %>
        <div data-hook="inside_cart_form">

          <div data-hook="cart_items" class="table-responsive">
            <%= render partial: 'form', locals: { order_form: order_form } %>
          </div>

          <div class="links col-md-6 navbar-form pull-right text-right small-update-btn small-left-1" data-hook="cart_buttons">
            <div class="form-group">
              <%= button_tag class: 'btn btn-primary', id: 'update-button' do %>
                <%= Spree.t(:update) %>
              <% end %>
              <%= button_tag class: 'btn btn-lg btn-success', id: 'checkout-link', name: 'checkout' do %>
                <%= Spree.t(:checkout) %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div id="empty-cart" class="col-md-6 pull-left small-left-1" data-hook>
      <%= form_tag empty_cart_path, method: :put do %>
        <p class="s-fon" id="clear_cart_link"  data-hook>
          <%= submit_tag Spree.t(:empty_cart), class: 's-fon btn btn-default' %>
          <%= Spree.t(:or), class: 's-fon'%>
          <%= link_to Spree.t(:continue_shopping), products_path, class: 's-fon continue'%>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
<style type="text/css">
  @media(min-width: 480px) and (max-width: 767px){
    .small-update-btn{
      float: left !important;
      margin-left: 0px !important;
    }
    .space-left{
      margin-left: 15px !important;
    }
  }

  @media(min-width: 200px) and (max-width: 480px){
    .small-update-btn{
      float: left !important;
      margin-left: 0px !important;
    }
    .small-left-1{
     padding-left: 30px !important; 
    }
    
  }
  @media(max-width: 480px){
    p a {
    font-size: 10px !important;
    }
    form .btn{
      font-size: 10px !important;
    }
  }
</style>